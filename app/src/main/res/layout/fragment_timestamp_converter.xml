<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 时间输入字段 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0-analysis timesec" />

            <EditText
                android:id="@+id/input_0"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:inputType="number"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1-last submit" />

            <EditText
                android:id="@+id/input_1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:inputType="number"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2-recognize done" />

            <EditText
                android:id="@+id/input_2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:inputType="number"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3-analysis done" />

            <EditText
                android:id="@+id/input_3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:inputType="number"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4-merge done" />

            <EditText
                android:id="@+id/input_4"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:inputType="number"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5-compress done" />

            <EditText
                android:id="@+id/input_5"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:inputType="number"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6-storage done" />

            <EditText
                android:id="@+id/input_6"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:inputType="number"
                android:padding="10dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/output_all_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="2dp"
            android:maxLines="20"
            android:scrollHorizontally="false"
            android:text="转换结果："
            android:textColor="#222222"
            android:textSize="14sp"
            android:typeface="monospace" />
    </LinearLayout>
</ScrollView>
